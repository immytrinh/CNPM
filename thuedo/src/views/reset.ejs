<div class="modal">
    <div class="auth-form">
        <div class="auth-form__container">
            <div class="auth-form__header">
                <h3 class="auth-form__heading">Đặt lại mật khẩu</h3>
                <a class="auth-form__switch-btn" href="/user/login">Đăng nhập</a>
            </div>

            <form class="auth-form__form" action="/user/reset" id="reset_form" method="POST">
                <div alert type>
                    <% if(typeof done !="undefined" && done) { %>
                        <strong>
                            Đổi mật khẩu thành công!
                        </strong>
                        <% } else { %>
                            <% if(typeof message !="undefined" && message){ %>
                                <strong>
                                    <%=message%>
                                </strong>
                                <%}%>
                                    <%}%>
                </div>
                <div class="auth-form__group">
                    <input type="password" class="auth-form__input" id="password" name="password"
                        placeholder="Mật khẩu">
                </div>
                <div class="auth-form__group">
                    <input type="password" class="auth-form__input" id="confirmedPassword" name="confirmedPassword"
                        placeholder="Nhập lại mật khẩu">
                </div>
                <input type="hidden" name="email" id="email" value="<%=email %>">
                <div class="auth-form__controls">
                    <button class="btn btn--primary" type="submit">Gửi</button>
                </div>
            </form>
        </div>

    </div>
</div>