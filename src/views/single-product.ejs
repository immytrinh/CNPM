<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/cart-management.js" defer></script>
</head>
<body>
  <%- include('../../shared/includes/header') %> -->
<main id="product-details">
  <header>
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div id="product-info">
      <h1>
        <%= product.title %>
      </h1>
      <p>
        <%= product.price %> VND
      </p>
      <section class="selection-date">
        <p>Chọn ngày bạn muốn thuê</p>
        <div class="field-wrap">
          <div>
            <label for="start">Start:</label>
            <input type="date" id="start-date" name="start-date" value="" required>
          </div>
          <div>
            <label for="end">End:</label>
            <input type="date" id="end-date" name="end-date" value="" required>
          </div>
        </div>
      </section>
      <p>
        <label for="quantity">Số lượng</label>
        <input type="number" id="quantity" name="quantity" value="0" min="1" step="1" required>
      </p>
      <a class="btn" href="/checkout">Thuê</a>
      <button class="btn" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Add to Cart</button>
    </div>

  </header>
  <p id="Product-description">
    <%= product.description %>
  </p>
  <script>
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!
    var yyyy = today.getFullYear();
    if (dd < 10) {
      dd = '0' + dd
    }
    if (mm < 10) {
      mm = '0' + mm
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("start-date").setAttribute("min", today);
    document.getElementById("end-date").setAttribute("min", today);
  </script>
</main>
